.dialog-hd
  font-size: 16px
  line-height: @font-size
  position: relative
  color: #fff
  background: #834e4e
  padding: 12px 20px
  .k-title
    font-weight: bold
  .k-close
    position: absolute
    top: 10px
    right: 15px
    color: #fff
    background: none

.dialog-bd
  padding: 20px
  background: #fffff9

.k-text
  color: #000
  font-size: 12px
  line-height: 1.5
  white-space: normal
  margin-bottom: 10px

.k-buttons
  text-align: right
  .btn
    margin-left: 6px

.dialog-ft
  color: #000
  font-size: 12px
  padding: 10px 20px
  background: #e4e4de
  .checkbox
    cursor: pointer
    line-height: 1.4
    vertical-align: top
    overflow: hidden
    input[type="checkbox"]
      margin-right: 5px
